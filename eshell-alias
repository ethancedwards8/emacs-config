alias ls exa --color=always $1
alias ll exa --color=always -l $1
alias la exa --color=always -a $1
alias lah exa --color=always -lah $1
alias e find-file $1
alias edit find-file $1
alias vim find-file $1
alias d dired $1

alias config git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME $1

alias ffo find-file-other-window $1